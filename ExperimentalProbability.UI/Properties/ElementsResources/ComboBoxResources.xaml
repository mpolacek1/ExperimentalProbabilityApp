<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:resx="clr-namespace:ExperimentalProbability.UI.Properties.LocalizableResources">

    <Style x:Key="Style_ComboBox_Default" TargetType="ComboBox">
        <Setter Property="IsEditable" Value="True"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>
    <Style x:Key="Style_ComboBox_TypeSelection" TargetType="ComboBox" BasedOn="{StaticResource Style_ComboBox_Default}">
        <Setter Property="Text" Value="{x:Static resx:WindowResources.Settings_ComboBox_TypeSelection_Text}"/>
    </Style>
    <Style x:Key="Style_ComboBox_ItemSelection" TargetType="ComboBox" BasedOn="{StaticResource Style_ComboBoxDefault}">
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

</ResourceDictionary>