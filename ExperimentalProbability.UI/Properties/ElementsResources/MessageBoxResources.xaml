<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:resx="clr-namespace:ExperimentalProbability.UI.Properties.LocalizableResources">

    <Style x:Key="Style_MessageBox" TargetType="xctk:MessageBox">
        <Style.Setters>
            <Setter Property="CaptionForeground" Value="Red"/>
            <Setter Property="CaptionFontSize" Value="20"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Yu Gothic"/>
            <Setter Property="WindowBackground" Value="Black"/>
            <Setter Property="WindowBorderBrush" Value="Crimson"/>
            <Setter Property="WindowBorderThickness" Value="3"/>
            <Setter Property="ButtonRegionBackground" Value="Black"/>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>