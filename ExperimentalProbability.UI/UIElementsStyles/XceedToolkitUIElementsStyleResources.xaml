<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:resx="clr-namespace:ExperimentalProbability.UI.Properties">

    <Style x:Key="IntegerUpDownDefault"
           TargetType="xctk:IntegerUpDown">
        
        <Setter Property="AllowSpin"
                Value="True"/>
        
        <Setter Property="ClipValueToMinMax"
                Value="True"/>
        
    </Style>

    <Style x:Key="IntegerUpDownSimulations"
           TargetType="xctk:IntegerUpDown"
           BasedOn="{StaticResource IntegerUpDownDefault}">

        <Setter Property="Increment"
                Value="1000"/>

        <Setter Property="Maximum"
                Value="100000000"/>

        <Setter Property="MaxLength"
                Value="9"/>

        <Setter Property="Minimum"
                Value="1000"/>

        <Setter Property="Text"
                Value="{x:Static resx:Resources.Default_Simulations_Value}"/>

    </Style>

</ResourceDictionary>