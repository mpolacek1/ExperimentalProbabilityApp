<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resx="clr-namespace:ExperimentalProbability.Contracts.Properties.Resources.Calculations.Pool.General;assembly=ExperimentalProbability.Contracts"
    >
    <Style x:Key="Condition_Expander" TargetType="{x:Type Expander}">
        <Style.Setters>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsExpanded" Value="True">
                <Setter Property="Header" Value="{x:Static resx:Resources.Condition_Expander_Hide}" />
            </Trigger>
            <Trigger Property="IsExpanded" Value="False">
                <Setter Property="Header" Value="{x:Static resx:Resources.Condition_Expander_Show}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>