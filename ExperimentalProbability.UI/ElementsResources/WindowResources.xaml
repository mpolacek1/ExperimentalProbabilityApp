<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExperimentalProbability.UI"
                    xmlns:resx="clr-namespace:ExperimentalProbability.UI.Properties">

    <Style TargetType="local:MainWindow">
        <Setter Property="Background" Value="#181818"/>
        <Setter Property="MinWidth" Value="800"/>
        <Setter Property="MinHeight" Value="600"/>
        <Setter Property="FontFamily" Value="Yu Gothic"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Title" Value="{x:Static resx:Resources.Window_MainWindow_Title}"/>
    </Style>
    
</ResourceDictionary>