<Window x:Class="ExperimentalProbability.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:ExperimentalProbability.UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
        Title="Experimental Probability"
        Height="600"
        Width="800"
        Background="#181818"
        FontSize="20"
        Foreground="White">
    <DockPanel Width="auto"
               Height="auto"
               Margin="20">

        <Grid Margin="0,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="0"
                       Margin="0,0,0,20"
                       Text="Calculation" 
                       FontSize="24"
                       FontWeight="Bold"
                       TextDecorations="Underline"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Margin="0,0,20,20"
                       Text="Amount of simulations:"/>

            <TextBox x:Name="SimulationAmountTextBox"
                     Grid.Column="1"
                     Grid.Row="1"
                     Margin="0,0,0,20"
                     Background="#181818"
                     Foreground="White"
                     Text="100"
                     TextAlignment="Right"
                     MaxLines="1"
                     AllowDrop="False"/>

            <TextBlock x:Name="AverageResultTextBlock" Grid.Column="0"
                       Grid.Row="3"
                       Text="Average result = N/A"
                       FontWeight="Bold"/>

            <Button x:Name="CalculateButton"
                    Grid.Column="1"
                    Grid.Row="3"
                    Content="Calculate"
                    HorizontalAlignment="Right"
                    Click="CalculateButton_Click"/>

        </Grid>
        <TextBlock DockPanel.Dock="Top"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Text="Data chart"
                   FontSize="24"
                   FontWeight="Bold"
                   TextDecorations="Underline"/>

        <Expander x:Name="ExpanderChart"
                  Header="Expand chart"
                  Foreground="White"
                  FontStyle="Italic"
                  IsExpanded="False"
                  Cursor="Hand"
                  Collapsed="ExpanderChart_Collapsed"
                  Expanded="ExpanderChart_Expanded">

            <lvc:CartesianChart x:Name="DataChart"
                                Width="auto"
                                Height="auto">

                <lvc:CartesianChart.Series>
                    <lvc:LineSeries Values="{Binding LineValues}"/>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
        </Expander>
    </DockPanel>
</Window>
