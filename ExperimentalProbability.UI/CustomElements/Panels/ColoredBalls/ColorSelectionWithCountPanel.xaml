<StackPanel x:Class="ExperimentalProbability.UI.CustomElements.Panels.ColoredBalls.ColorSelectionWithCountPanel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:ExperimentalProbability.UI.CustomElements.Panels.ColoredBalls"
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            mc:Ignorable="d"
            DataContext="{Binding RelativeSource={RelativeSource Self}}"
            Margin="0,0,5,5"
            Initialized="StackPanel_Initialized">
    
    <local:ColorSelectionPanel/>
    <WrapPanel>
        <Label Target="{Binding ColorCount}" Style="{StaticResource Style_Label_ColorCount}"/>
        <xctk:IntegerUpDown x:Name="ColorCount" Style="{StaticResource Style_IntegerUpDown_ColorCount}" ValueChanged="ColorCount_ValueChanged"/>
    </WrapPanel>

</StackPanel>
